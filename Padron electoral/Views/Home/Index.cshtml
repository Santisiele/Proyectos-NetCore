@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
     <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
          <div class="formulario">
              <center>
                  <h2>Consulte el padrón</h2>
              </center>
        <form action='@Url.Action("ConsultaPadron", "Home")' method="POST">
